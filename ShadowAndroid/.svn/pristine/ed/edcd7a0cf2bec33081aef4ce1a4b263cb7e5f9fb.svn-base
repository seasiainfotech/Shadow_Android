<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rating_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_profile_row"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/text_view_time_row"
        android:layout_alignStart="@+id/text_view_time_row"
        android:layout_alignTop="@+id/text_view_name_row"
        android:src="@drawable/profile_gray" />

    <TextView
        android:id="@+id/text_view_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_profile_row"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/testing"
        />

    <TextView
        android:id="@+id/text_view_name_row"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/ll_rating"
        android:layout_toRightOf="@+id/image_view_profile_row"
        android:text="whegfvgvsdf jfgsdg"
        android:textStyle="bold"
        android:textColor="@color/username_color" />

    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_message"
            android:background="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:background="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:background="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:background="@drawable/ic_star_grey" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:background="@drawable/ic_star_grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_rating"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/username_color"
        android:layout_toRightOf="@+id/image_view_profile_row"
        android:text="da" />

    <TextView
        android:id="@+id/text_view_time_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_view_comment"
        android:layout_marginLeft="10dp"
        android:text="12m" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/overlay_border_color"
        android:layout_below="@+id/text_view_days"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"

        ></View>

</RelativeLayout>