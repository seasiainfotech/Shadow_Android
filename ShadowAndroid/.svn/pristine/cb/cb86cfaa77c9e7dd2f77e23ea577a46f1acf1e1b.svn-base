<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/ll_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/ic_star_grey"

                    />

                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/ic_star_grey" />

                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/ic_star_grey" />

                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/ic_star_grey" />

                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/ic_star_grey" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/notification"
                android:layout_margin="5dp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_request"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/shadow_purple"

                />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_toLeftOf="@+id/iv_request"
                android:background="@drawable/message" />

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu_purple"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_settings"
                android:background="@drawable/edit_profile"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_image_height_profile"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rl_border_grey">

            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/ll_rating"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile_gray"
            />

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/iv_user_profile"
                android:background="@drawable/video_camera"

                />

            <ImageView
                android:id="@+id/iv_url1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/linkdin"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_url2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/iv_url1"
                android:background="@drawable/fb"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_url3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/iv_url2"
                android:background="@drawable/twitter" />

            <TextView
                android:id="@+id/text_view_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text=" "
                android:textColor="@color/username_color"

                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text=" "
                android:textColor="@color/school_company_color"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/text_view_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_school"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="  "
                android:textColor="@color/school_company_color"
                android:textSize="17sp" />


        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rl_border_grey">
            <View
                android:id="@+id/view_center"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:layout_centerHorizontal="true"></View>

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_shadow_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_followers"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center"
                android:text="Shadowers"
                android:textColor="@color/school_company_color"
                android:layout_marginBottom="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shadow_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_following"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view_center"
                android:text="Shadowed"
                android:textColor="@color/school_company_color"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="12sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rl_border_grey"
            android:focusableInTouchMode="true"
            >

            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Bio:"
                android:textColor="@color/username_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_bio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bio"
                android:layout_below="@+id/tv_bio"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/school_company_color"
                android:text="sasasas  " />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rl_border_grey">

            <TextView
                android:id="@+id/tv_occu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Occupations:"
                android:textColor="@color/username_color" />

            <com.android.shadow.views.ExpandableHeightGridView
                android:id="@+id/grid_view_occupations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_occu"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:numColumns="3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rl_border_grey">

            <TextView
                android:id="@+id/tv_interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Interests:"
                android:textStyle="bold"
                android:textColor="@color/username_color"  />

            <com.android.shadow.views.ExpandableHeightGridView
                android:id="@+id/grid_view_interests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_interest"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:numColumns="3"

                ></com.android.shadow.views.ExpandableHeightGridView>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>