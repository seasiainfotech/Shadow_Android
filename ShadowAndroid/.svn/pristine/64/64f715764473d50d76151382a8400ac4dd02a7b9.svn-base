<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.shadow.views.ratingcomment.AddRatingCommentActivity">

>


    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="@dimen/back_icon_width"
        android:layout_height="@dimen/back_icon_width"
        android:layout_margin="10dp"
        android:background="@drawable/back_icon" />


    <LinearLayout
        android:id="@+id/ll_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_message"
            android:src="@drawable/star_icon" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:src="@drawable/star_icon" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:src="@drawable/star_icon" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:src="@drawable/star_icon" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/iv_message"
            android:src="@drawable/star_icon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_view_send"
        android:layout_width="@dimen/back_icon_width"
        android:layout_height="@dimen/back_icon_width"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/ic_send" />

    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_rating"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Message:"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_below="@+id/text_view_message"
        android:layout_margin="10dp" />

</RelativeLayout>
