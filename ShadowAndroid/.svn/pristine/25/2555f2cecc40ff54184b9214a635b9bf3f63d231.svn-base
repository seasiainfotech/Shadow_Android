<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.shadow.views.auth.UsernameActivity">


    <RelativeLayout
        android:id="@+id/rl_phone_forgot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="@dimen/back_icon_width"
        android:layout_height="@dimen/back_icon_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="@color/colorPrimary" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow_purple"

        />


    <TextView
        android:id="@+id/textview_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="What is your phone number?"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_number"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="+1"
        android:textSize="20sp"

        />

    <View
        android:id="@+id/view_num"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_country_code"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"

        ></View>


    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view_num"
        android:backgroundTint="@color/colorPrimary"
        android:hint="Number"
        android:inputType="number"
        android:maxLength="15"
        android:singleLine="true"


        />

    <TextView
        android:id="@+id/text_view_next_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_text_number"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_purple_border"
        android:gravity="center"
        android:padding="7dp"
        android:text="Next"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/text_view_try_email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
         android:layout_marginRight="20dp"
        android:gravity="right"
        android:paddingTop="7dp"
        android:text="Try email?"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/text_view_next_number"
        />
    </RelativeLayout>
</RelativeLayout>
