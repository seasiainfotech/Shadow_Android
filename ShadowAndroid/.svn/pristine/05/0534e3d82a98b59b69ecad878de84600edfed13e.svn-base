<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/ll_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_message"
                    android:background="@drawable/star_icon" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/notification" />

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_notification"
                android:background="@drawable/message" />

            <ImageView
                android:id="@+id/iv_request"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_message"
                android:background="@drawable/shadow_purple"

                />

            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/menu_purple"

                />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/iv_settings"
                android:background="@drawable/edit_profile" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/ll_rating"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_gray"
                app:border_color="@color/colorPrimary"
                app:border_width="2dp" />

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="90dp"
                android:layout_toRightOf="@+id/iv_user_profile"
                android:background="@drawable/video_camera"

                />

            <ImageView
                android:id="@+id/iv_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:background="@android:drawable/ic_delete"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_rating"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/iv_link"
                android:background="@android:drawable/ic_delete"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/ll_rating"
                android:layout_marginRight="20dp"
                android:layout_marginTop="90dp"
                android:layout_toLeftOf="@+id/iv_user_profile"
                android:background="@drawable/linkedin_icon" />

            <TextView
                android:id="@+id/text_view_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="name"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="location"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <View
                android:id="@+id/view_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/text_view_location"
                android:layout_centerHorizontal="true"></View>

            <TextView
                android:id="@+id/text_view_comp_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="url"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <!-- <TextView
                 android:id="@+id/text_view_occupation"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/text_view_school"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/view_center"
                 android:text="occupation"
                 android:textColor="@android:color/black"
                 android:textSize="17sp" />-->

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_comp_url"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_comp_url"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_shadow_followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_followers"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center"
                android:text="Shadowed by shadow user"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shadow_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_following"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view_center"
                android:gravity="center"
                android:text="Shadowers verified"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_school_with_occupatons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shadow_followers"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="10"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_users_employed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shadow_followers"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center_horizontal"
                android:text="15"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_users_employed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_users_employed"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/view_center"
                android:gravity="center"
                android:text="Users employed"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_school_with_occupatons_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_school_with_occupatons"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/view_center"
                android:gravity="center"
                android:text="School with these occupations"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_bio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Occupations:"
            android:textColor="@android:color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_occupations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>
</ScrollView>
