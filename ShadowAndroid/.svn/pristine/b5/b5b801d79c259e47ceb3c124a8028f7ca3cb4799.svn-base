<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.shadow.views.auth.UsernameActivity">

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_icon"
        android:backgroundTint="@color/colorPrimary" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_delete"

        />


    <TextView
        android:id="@+id/textview_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Hi! What is your phone number?"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_number"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="+1"
        android:textSize="20sp"

        />

    <View
        android:id="@+id/view_num"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_number"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"

        ></View>


    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view_num"
        android:backgroundTint="@color/colorPrimary"
        android:hint="number"
        android:inputType="number"
        android:maxLength="15"
        android:singleLine="true"


        />

    <TextView
        android:id="@+id/text_view_next_password"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edit_text_number"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_purple_border"
        android:gravity="center"
        android:padding="7dp"
        android:text="Next"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>
