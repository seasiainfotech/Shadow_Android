<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/s1"
    android:background="@drawable/rl_border_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_border_color"
        tools:context="com.android.shadow.views.request.sendRequest.SendRequestActivity">

        <TextView
            android:id="@+id/text_view_want_to_meet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="want to meet?"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/rb_in_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_want_to_meet"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/colorPrimary"
            android:text="in-person"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_virtually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rb_in_person"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/colorPrimary"
            android:text="virtually"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_view_medium"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rb_in_person"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/rb_virtually"
            android:background="@drawable/round_border_dark_purple"
            android:gravity="center"
            android:hint="select medium"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_view_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_medium"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="select the best date:"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/text_view_select_date"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_purple_border" />

        <TextView
            android:id="@+id/text_view_send_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/calendar_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Send a message:"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="50dp"
            android:layout_below="@+id/text_view_send_message"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</ScrollView>